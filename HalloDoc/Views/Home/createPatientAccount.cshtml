@model HalloDoc.DataAccessLayer.DataModels.ViewModels.ResetPasswordVM;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Create Patient Account Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between patient-create-account-main full-content">
        <header>
            <partial name="login_header"/>
        </header>
        <form class="mt-3" method="post" asp-action="createPatientAccount" asp-controller="Home">
        <div class="main d-flex justify-content-center align-items-center">
            <div class="row row-cols-1 justify-content-center align-items-center width ">
                <div class="col">
                    <h3 class="signup-msg">Create Account</h3>
                </div>
                <div class="col">
                    <div class="form-floating position-relative mb-3">

                        <input asp-for="Email" type="email" class="form-control email shadow-none " id="floatingInput" placeholder="">
                        <label for="floatingInput" class=" email-text">Email address </label>
                        <i class="fa-regular fa-user position-absolute user-icon" style="color: #828487;"></i>

                    </div>
                </div>
                <div class="col">
                    <div class="form-floating position-relative">
                            <input asp-for="Password" type="password" class="form-control password shadow-none" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword" class=" password-text">Password</label>
                        <i class="fa-regular fa-eye  position-absolute eye-icon" style="color: #828487;"></i>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating position-relative">
                            <input asp-for="CPasswordHash" type="password" class="form-control password1 shadow-none mt-1" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword" class=" password-text">Confirm Password</label>
                        <i class="fa-regular fa-eye  position-absolute eye-icon1" style="color: #828487;"></i>
                    </div>
                </div>

                    <input type="hidden" name="Token" value=@Model.Token asp-for="Token">
                <div class="col gy-2">
                    <button type="submit" class="btn signup-btn w-100">Create Account</button>
                </div>

            </div>
            
        </div>
        </form>
        <footer class="d-flex justify-content-center align-items-baseline">
            <partial name="login_footer"/>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/custom.js"></script>
</body>
</html>