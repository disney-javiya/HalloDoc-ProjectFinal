    <script>
        $('#loginPrompt').css('display', 'none');
        $(document).ready(function () {
            // Attach blur event handler to the email input field
            $('#email').blur(function () {
                // Perform client-side email validation
                var email = $(this).val();
                // Perform AJAX validation if the email is valid
                $.ajax({
                    url: '/Home/CheckEmail',
                    method: 'POST',
                    data: { email: email },
                    success: function (response) {
                        if (!response.exists) {
                            $('#loginPrompt').css('display', 'block');
                        } else {
                            $('#loginPrompt').css('display', 'none');
                        }
                    }
                });

            });


        });
    </script>
    <script>
