@model HalloDoc.DataAccessLayer.DataModels.ViewModels.ResetPasswordVM;
@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Create Patient Account Page</title>
</head>
<body>

<div id="body1" class="container-fluid border d-flex flex-column justify-content-between min-vh-100 nocontain">

    <div class="row row-cols-1">

        <partial name="login_header" />
    </div>

    <div class="row">
        <div class="col d-flex justify-content-center  ">

            <div class="d-flex flex-column " style="width: 400px; margin-top: 7%;">


                <div class="logintext fw-semibold fs-4 mt-2 text-center" style="letter-spacing: 1px">
                    Reset Password
                </div>
                <form class="mt-3" method="post" asp-action="ResetPassword" asp-controller="Home">

                    <div class="form-floating mb-3 inputtexticon ">
                            <input type="email" class=" form-control email pe-5" id="floatingInput" asp-for="Email" placeholder="">
                            <label class=" email-text" for="floatingInput">Email</label>
                        <i class="bi bi-person-circle position-absolute"></i>
                    </div>


                    <div class="form-floating mb-3 d-flex inputtexticon">
                            <input type="password" id="passwordshow" class="form-control pe-5 password" id="floatingInput"
                               placeholder="" asp-for="Password">
                            <label class="password-text" for="floatingInput">Password</label>

                            <i class="bi bi-eye position-absolute password1" id=" showpassword" onclick="visiblitypassword()"></i>
                        <i class="bi bi-eye-slash position-absolute" id="hidepassword"
                           onclick="visiblitypassword()"></i>

                    </div>
                    <div class="form-floating mb-3 d-flex inputtexticon">
                        <input type="password" id="passwordshow1" class="form-control pe-5" id="floatingInput1"
                               placeholder="" asp-for="CPasswordHash">
                        <label for="floatingInput">Confirm Password</label>

                        <i class="bi bi-eye position-absolute" id=" showpassword1" onclick="visiblitypassword1()"></i>
                        <i class="bi bi-eye-slash position-absolute" id="hidepassword1"
                           onclick="visiblitypassword1()"></i>

                    </div>


                    <input type="hidden" name="Token" value=@Model.Token asp-for="Token">


                    <div class="d-grid gap-2">
                        <button class="btn btn-info text-light" type="submit" >Reset</button>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <div class="row">
        <partial name="login_footer" />
    </div>

</div>
    <script src="~/js/custom.js"></script>
</body>
</html>
