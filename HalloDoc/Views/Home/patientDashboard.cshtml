@model IEnumerable<HalloDoc.DataAccessLayer.DataModels.Request>
@using Microsoft.AspNetCore.Http;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="/js/custom.js"></script>

  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Patient Dashboard Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between patient-dashboard-main full-content">
        <header>
            <partial name="dashboard_header"/>
        </header>
        <main>
            <div class="main-dashboad d-flex flex-column">
                <h3>Medical History</h3>
                <a role="button" class="btn create-new-btn p-1 ms-auto mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                   Create New Request
                </a>
              
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Created Date</th>
                            <th scope="col">Current Status</th>
                            <th scope="col">Chat With</th>
                            <th scope="col">Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @{
                                        int status = item.Status;
                                        switch (status)
                                        {
                                            case 1:
                                                <p>Unassigned</p>
                                                break;
                                            case 2:
                                                <p>Accepted Case</p>
                                                break;
                                            case 3:
                                                <p>Cancelled Case</p>
                                                break;
                                            case 4:
                                                <p>MDEnRoute Case</p>
                                                break;
                                            case 5:
                                                <p>MDONSite Case</p>
                                                break;
                                            case 6:
                                                <p>Conclude Case</p>
                                                break;
                                            case 7:
                                                <p>Cancelled By Patient Case</p>
                                                break;
                                            case 8:
                                                <p>Closed Case</p>
                                                break;
                                            case 9:
                                                <p>Unpaid Case</p>
                                                break;
                                        }
                                   
                                  }
                                    
                                </td>
                                <td>
                                    <a class="table-btn p-1 text-info" role="button" style="border: 1px solid #01bce9;" onclick="OpenChat('@item.PhysicianId','Provider')">Provider</a>

                                    <a class="table-btn p-1 text-info" style="border: 1px solid #01bce9;" role="button" onclick="OpenGroupChat('1','@item.PhysicianId','@item.RequestId')">Group Chat</a>
                                </td>
                                <td>
                                    <a  role="button" class="document-btn p-1"  href="@Url.Action("ViewDocuments", "Home", new { requestId = item.RequestId })">Documents</a>    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div id="alertContainer" style="position: fixed; top: 10px; right: 10px; z-index: 1000;">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Login Successful!</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="background:#01BCE9; color:white; font-size:16px;">
                            <h5 class="modal-title" id="exampleModalLabel" >Create New Request</h5>
                            <button type="button" class="btn-close" style="color:white;" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p style="color:grey">Here I want to create new request for...</p>
                            <a role="button" class="modal-button-request p-2"  asp-controller="Home" asp-action="requestMe">Me</a>
                            <a role="button" class="modal-button-request p-2" asp-controller="Home" asp-action="requestSomeoneElse">Some One Else</a>
                        </div>
                        <div class="modal-footer">
                            <a role="button" class="modal-button-request p-2" >Continue</a>
                            <a role="button" class="modal-button-request p-2" data-bs-dismiss="modal">Cancel</a>
                        </div>
                    </div>
                </div>

                

            </div>
            <div id="modalpopup">
                
            </div>
        </main>

        <footer class="d-flex justify-content-center align-items-baseline">
            <partial name="dashboard_footer"/>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
   
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script> *@
    <script src="/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script>
        
        setTimeout(function () {
            var alertContainer = document.getElementById('alertContainer');
            alertContainer.style.display = 'none';
        }, 2000); 

    </script>

    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        connection.start().then(function () {
            // document.getElementById("sendButton").disabled = false;
        }).catch(function (err) {
            return console.error(err.toString());
        });
        function OpenChat(phyid, requesterType) {
            $.ajax({
                url: "/Home/_ChatPanel",
                data: { 'phyid': phyid, 'requesterType': requesterType },
                type: "GET",
                dataType: "html",
                success: function (data) {
                    debugger;                    
                    $("#modalpopup").html(data);
                    @* $("#modalpopup").show(); *@
                },
                error: function () {
                    alert("No Projects Found");
                    $("#tableContent").html('An error has occurred');
                }
            });
        }
        

    </script>

    <script>

        function OpenGroupChat(adminId, phyid, requestId) {
            $.ajax({
                url: "/Home/_GroupChatPanel",
                data: { 'adminId': adminId, 'phyid': phyid, 'requestId': requestId },
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $("#modalpopup").html(data);
                },
                error: function () {
                    alert("No Projects Found");
                    $("#tableContent").html('An error has occurred');
                }
            });
        }

    </script>
</body>
</html>