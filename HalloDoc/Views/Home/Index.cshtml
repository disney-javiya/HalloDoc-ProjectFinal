@model AspNetUser
@{
    ViewData["Title"] = "PatientLogin";

    Layout = null;
}






@section Scripts{
    <partial name="_ValidationScriptsPartial" />
        }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="/js/admin.js"></script>
    <script src="/js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>Login Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between patient-login-main full-content">
        <header>
            <partial name="login_header" />
        </header>
        <main>
            <div class="main d-flex justify-content-center align-items-center">
                <div class="row row-cols-1 justify-content-center align-items-center width ">
                    <div class="col">
                        <a class="back-link" asp-controller="Home" asp-action="patientSite">< Back</a>
                    </div>
                    <div class="col">
                        <h3 class="login-msg">Login To Your Account</h3>
                    </div>
                    <form method="post">


                        <div class="col">
                            <div class="form-floating position-relative mb-3">

                                <input asp-for="Email" type="email" class="form-control email shadow-none " id="floatingInput" placeholder="">
                                <label for="floatingInput" class=" email-text">Email address </label>
                                <i class="fa-regular fa-user position-absolute user-icon" style="color: #828487;"></i>
                                <span id="emailvalidate"></span>

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating position-relative mb-3">
                                <input asp-for="PasswordHash" type="password" class="form-control password shadow-none" id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword" class=" password-text">Password</label>
                                <i class="fa-regular fa-eye  position-absolute eye-icon" style="color: #828487;"></i>
                                <span id="pwd"></span>
                            </div>
                        </div>
                        <div class="col gy-3">
                            <button class="btn login-btn w-100" type="submit">Log In</button>
                        </div>
                        <div class="col">
                            <a class="forgot-link d-flex justify-content-center" asp-controller="Home" asp-action="forgotPassword">Forgot Password?</a>
                        </div>
                    </form>


                </div>


            </div>
        </main>
        <footer class="d-flex justify-content-center align-items-baseline">
            <partial name="login_footer" />
        </footer>

    </div>
    <script>
        $(document).ready(function () {
            $('.login-btn').click(function (e) {

                var email = $('.email').val();
                if (email == "") {
                    $("#emailvalidate").text("Enter Email First!!").css("color", "red");
                    e.preventDefault();
                }
                var password = $('.password').val();
                if (password == "") {
                    $("#pwd").text("Enter Password First!!").css("color", "red");
                    e.preventDefault();
                }

            });
        });



    </script>


</body>
</html>