<script>
    $(document).ready(function () {
        
        $.ajax({
            url: '/Provider/getPhysicianRegions',
            method: 'GET',
        
            success: function (data) {

                $.each(data, function (index, region) {

                    var checkbox = $('<input checked disabled>').attr({
                        type: 'checkbox',
                        name: 'regions',
                        class: 'box',
                        value: region.regionId
                    });

                    var label = $('<label>').text(region.name);

                    var container = $('#checkbox-container');
                    container.append(checkbox).append(" ").append(label).append('<br>');
                });

            },
            error: function (xhr, status, error) {
                console.error("Error fetching regions:", xhr.status, xhr.statusText);
                console.error("Response body:", xhr.responseText);
                alert("Failed to fetch regions. Please try again later.");
            }

        });
    });
</script>







<script>


    $('#reset').click(function () {

        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const physicianId = urlParams.get('physicianId');
        const password = $('#password').val();
        if (password == "") {
            $("#pwd").append("Enter Password First!!").css("color", "red");
        }
        if (password != "") {
            $.ajax({
                url: '/Provider/physicianUpdatePassword',
                method: 'POST',
                data: { 'physicianId': physicianId, 'password': password },
                success: function (data) {
                }
            });
        }

    });


</script>
