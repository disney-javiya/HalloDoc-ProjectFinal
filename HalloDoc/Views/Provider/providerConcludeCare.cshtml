@model IEnumerable<HalloDoc.DataAccessLayer.DataModels.RequestWiseFile>

@{
    Layout = "_ProviderHeader";
}

<main>

    <div class="main-viewdocuments d-flex flex-column">
        <div class="view-documents d-flex flex-column  container">
            <div class="d-flex flex-row">
                <h3>Conclude Case</h3>
                <a asp-controller="Provider" asp-action="providerDashboard" role="btn" class="back-btn p-1 ms-auto mb-2">Back</a>
            </div>
            <p>Patient Name</p>
            <b class="name-patient">@ViewBag.pname (@ViewBag.num)</b>

           


            <div class="data-table-admin-viewuploads">

                 <form method="post" enctype="multipart/form-data" action="@Url.Action("UploadFiles", "Provider", new { requestId =  Context.Request.Query["requestId"]})">
                <input type="file" name="files" id="real-file" hidden="hidden" multiple />
                <div class="input-group mb-3">
                    <input class="form-control" type="text" id="custom-text" aria-label="readonly input example" value="Select File" readonly>
                    <button class="btn btn-info" type="button" id="custom-button">
                        <i class="bi bi-cloud-arrow-up"></i> Upload
                    </button>
                </div>
                </form>
                <table class="table">
                    <thead>
                        <tr>

                            <th scope="col">Documents</th>
                           
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FileName)
                                </td>
                               

                                <td>
                                    <a href="@Url.Action("DownloadFile", "Provider", new { fileId = item.RequestWiseFileId})" class="btn p-0">
                                        <i class="fa-solid fa-cloud-arrow-up m-1 p-2" style="color: #01bce9; border: 1px solid #01bce9; border-radius: 2px;"></i>
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <form method="post" enctype="multipart/form-data" action="@Url.Action("providerConcludeCarePost", "Provider", new { requestId =  Context.Request.Query["requestId"]})">
            <div class="row row-cols-1 justify-content-center align-items-center close-data">
                <div class="col mb-3">
                    <h2>Provider Notes</h2>
                </div>
                
                
                <div class="col-md-12 gy-3">
                    <div class="form-floating mb-3">
                        <textarea class="form-control symptoms-create-patient shadow-none" name="notes" placeholder="" id="floatingTextarea"></textarea>
                        <label class="symptoms-create-patient-text" for="floatingTextarea">Provider Notes</label>
                    </div>
                </div>


               

            </div>

            <div class="col d-flex justify-content-end mb-2 closecase-btns">
              
                <button role="button" type="submit"  class="btn closecase-btn-patient-profile me-2 p-2" style="color: #01bce9; border:1px solid #01bce9">Conclude Care</button>
            </div>
            </form>







            @*This code is for Mobile View*@


            <div class="adminmobileviewuploads">


                @foreach (var item in Model)
                {
                    <div class="card card-viewuploads" role="button" value="">
                        <div class="card-body d-flex flex-column justify-content-around">
                            <div class=" d-flex flex-row ">
                                <input class="form-check-input check" type="checkbox" value="@item.RequestWiseFileId" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">

                                </label>
                                <p class="ms-2" id="">@item.FileName</p>
                            </div>

                            <div class=" d-flex flex-row justify-content-between">
                                <p>@item.CreatedDate</p>

                            </div>
                            <div class=" d-flex flex-row justify-content-start p-0">
                                <a href="@Url.Action("DownloadFile", "Provider", new { fileId = item.RequestWiseFileId})" class="btn p-0">
                                    <i class="fa-solid fa-cloud-arrow-up m-1  p-2" style="color: #01bce9; border: 1px solid #01bce9; border-radius: 2px;"></i>
                                </a>


                            </div>

                        </div>
                    </div>
                }





            </div>






        </div>
    </div>
</main>


<script>
    let file = document.getElementById("real-file");
    const customBtn = document.getElementById("custom-button");
    const customTxt = document.getElementById("custom-text");

    customBtn.addEventListener("click", function () {
        file.click();
    });

    file.addEventListener("change", function () {
        var i;
        var filename = "";
        for (i = 0; i < file.files.length; i++) {
            filename = filename + " " + file.files[i].name;
        }
        if (file.files.length) {
            customTxt.setAttribute("value", filename);

            this.closest('form').submit();
        } else {
            customTxt.setAttribute("value", "Select File");
        }
    });
</script>
