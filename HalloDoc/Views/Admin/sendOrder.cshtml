@model HalloDoc.DataAccessLayer.DataModels.ViewModels.sendOrder
@using Microsoft.AspNetCore.Http;
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Admin Send Order Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between  admin-dashboard-main full-content">
        <header>
            <partial name="admin_dashboard_header" />
        </header>
        <main>
            <form method="post" id="sendOrderForm" action="@Url.Action("sendOrder", "Admin", new { requestId =  Context.Request.Query["requestId"]})">
                <div class="main-create-patient-req d-flex justify-content-center align-items-center mt-1">

                    <div class="row row-cols-1 justify-content-center align-items-center width-create-patient-req ">

                        <div class="d-flex flex-row justify-content-between mb-3">
                            <h3>Send Order</h3>
                            <button class="btn back-btn mt-1" asp-controller="Admin" asp-action="adminDashboard">< Back</button>
                        </div>

                        <div class="col-md-6">

                            <select asp-for="type" name="type" class="form-select p-3 mb-3" id="healthtype" aria-label="Default select example">
                                <option selected>HealthProfession Type</option>
                                @if (Model != null)
                                {
                                    @foreach (var cs in Model.HealthProfessionalType)
                                    {
                                        <option value="@cs.HealthProfessionalId">@cs.ProfessionName</option>
                                    }
                                }


                            </select>

                        </div>

                        <div class="col-md-6">
                            <select asp-for="hname" name="hname" id="healthprofesional" class="form-select mb-3 p-3" aria-label="Default select example">
                                <option selected>Select HealthProfessional</option>


                            </select>

                        </div>

                        <div class="col-md-6 ">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessContact" type="text" class="form-control b-contact last-name-create-patient shadow-none" id="floatingInput" placeholder="">
                                <label class="last-name-create-patient-text" for="floatingInput">Business Contact</label>
                                <span asp-validation-for="BusinessContact" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 gy-3 ">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control email email-create-patient shadow-none" id="floatingInput" placeholder="name@example.com">
                                <label class="email-create-patient-text" for="floatingInput">Email address</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6  me-auto">
                            <div class="form-floating mb-3">
                                <input asp-for="FaxNumber" type="text" class="form-control faxnumber last-name-create-patient shadow-none" id="floatingInput" placeholder="">
                                <label class="last-name-create-patient-text" for="floatingInput">Fax Number</label>
                                <span asp-validation-for="FaxNumber" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-12 gy-3">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Prescription" class="form-control symptoms-create-patient shadow-none" placeholder="" id="floatingTextarea"></textarea>
                                <label class="symptoms-create-patient-text" for="floatingTextarea">Prescription or Order Details</label>
                               
                                <span asp-validation-for="Prescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 me-auto">
                            <select asp-for="NoOfRefill" class="form-select NoOfRefill p-3 mb-3" aria-label="Default select example">
                                <option selected>Number of Refill</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>

                        </div>


                        <div class="col d-flex justify-content-end mb-2">
                            <button type="submit" class="btn submit-btn-create-patient me-2">Submit</button>
                            <button class="btn ms-1" style="border: 1px solid #01bce9; color: #01bce9;">Cancel</button>
                        </div>

                    </div>
                </div>
            </form>
        </main>

        <footer class="d-flex justify-content-end align-items-baseline">
            <partial name="admin_dashboard_footer" />
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/admin.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script>
        $(document).ready(function () {

            $('#healthtype').change(function () {

                var HealthProfessionalId = $('#healthtype').val();

                $.ajax({
                    url: '/Admin/GetHealthProfessional',
                    type: 'GET',
                    data: { HealthProfessionalId: HealthProfessionalId },
                    success: function (data) {

                        var healthprofesionalDropdown = $('#healthprofesional');
                        healthprofesionalDropdown.empty();
                        healthprofesionalDropdown.append($('<option></option>').text("Select Professionals"));
                        $.each(data, function (index, healthprofesional) {

                            healthprofesionalDropdown.append($('<option></option>').attr('value', healthprofesional.vendorId).text(healthprofesional.vendorName));

                        });

                    }
                });
            });
        });


    </script>
    <script>
        $(document).ready(function () {

            $('#healthprofesional').change(function () {

                var vendorId = $('#healthprofesional').val();

                $.ajax({
                    url: '/Admin/GetProfessionInfo',
                    type: 'GET',
                    data: { vendorId: vendorId },
                    success: function (data) {

                        $(".b-contact").val(data.businessContact);
                        $(".email").val(data.email);
                        $(".faxnumber").val(data.faxNumber);


                    }
                });
            });
        });


    </script>
</body>
</html>