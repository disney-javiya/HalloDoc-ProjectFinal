@model HalloDoc.DataAccessLayer.DataModels.ViewModels.dashboardTableModel
@{
    Layout = "_AdminHeader";
}
<script>
    var patientName;
    var date;
    var email;
    var phone;
    


    $(document).ready(function () {
        fetchBlockedHistoryData();
    });



</script>
<script>
    function fetchBlockedHistoryData() {
        patientName = $('#patientName').val();
        date = $('#date').val();
        email = $('#email').val();
        phone = $('#phone').val();
        $.ajax({
            url: "/Admin/blockedHistoryTable",

            data: { 'patientName': patientName, 'date': date, 'email': email, 'phone': phone, 'pagenumber': 1 },

            success: function (data) {
                $('#blockedhistory-table').html(data);
            },
            error: function () {

            }
        });
    }
</script>
<script>
    $(document).ready(function () {

        $('.records').css('border-bottom', 'solid 3px #01bce9');
    });
</script>
        <main>

            <div class="main-viewdocuments d-flex flex-column">
                <div class="view-documents d-flex flex-column  container">
                    <div class="d-flex flex-row">
                        <h3>Block History</h3>

                    </div>
                  
                        <div class="row d-flex justify-content-between">
                        <div class="col-md-3 gy-3">
                            <div class="form-floating mb-3">
                            <input name="patientName" type="text" class="form-control first-name-create-patient shadow-none" id="patientName" placeholder="">
                                <label class="first-name-create-patient-text" for="floatingInput">Name</label>
                                
                            </div>
                        </div>
                        <div class="col-md-3 gy-3">
                            <div class="form-floating mb-3">
                            <input name="date" type="date" class="form-control dob-create-patient shadow-none" id="date" placeholder="">
                                <label class="dob-create-patient-text" for="floatingInput">Date</label>
                                
                            </div>
                        </div>
                        <div class="col-md-3 gy-3">
                            <div class="form-floating mb-3">
                                <input name="email" type="email" id="email" class="form-control email-create-patient shadow-none"  mailto:placeholder="name@example.com">
                                <label class="email-create-patient-text">Email</label>
                            </div>
                        </div>
                        <div class="col-md-3 gy-3 ">
                            <div class="form-floating mb-3">
                                <input name="phone" class=" form-control contact-create-patient shadow-none info" id="phone" type="tel"/>
                                <label class="contact-create-patient-text" for="phone"> </label>
                            </div>
                        </div>
                       
                    </div>
                    <div class="d-flex justify-content-end m-2">
                    <a role="button" href="@Url.Action("clearBtnSearch", "Admin", new { id = "clearBtnBlockedHistory"})" class="btn back-btn me-2">Clear</a>
                        <button role="button" type="submit" onclick="fetchBlockedHistoryData()" class="btn submit-btn-create-patient">Search</button>
                    </div>


            <div id="blockedhistory-table">
            </div>
                </div>
            </div>
        </main>


    <!--For Delete-->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="deleteConfirmationForm" asp-controller="Admin" asp-action="adminDeletePartner" method="POST">

                    <!-- Modal Header -->
                    <div class="modal-header" style="background:#01bce9; color:white;">
                        <h4 class="modal-title">Delete Confirmation</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body" style="color:grey;">


                        <input type="hidden" id="roleinput1" name="VendorId" />
                        <b> Are you sure you want to delete this Vendor from list?</b>

                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn submit-btn-cancelcase">Confirm</button>
                        <button type="button" class="btn cancel-btn-cancelcase" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <script>
        const phoneInputField = document.querySelector("#phone");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });

    </script>
    <script>
        $(document).on('click', '#delete-option', function () {

            VendorId = $(this).attr("value");

        });

        $('#deleteConfirmationForm').submit(function (event) {

            $('#roleinput1').val(VendorId);


        });
    </script>
