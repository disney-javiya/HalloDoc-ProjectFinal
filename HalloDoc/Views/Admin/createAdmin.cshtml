                            <label class="email-create-patient-text" for="floatingInput">Confirm Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-6 gy-3 me-auto">
                        <div class="form-floating mb-3 ">
                            <input asp-for="Mobile" class=" form-control contact-create-patient shadow-none e1" id="phone" type="tel" />
                            <label class="contact-create-patient-text" for="phone"> </label>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-12 d-flex flex-row">
                        <div id="checkbox-container" class="col-md-6 gy-3 ">
