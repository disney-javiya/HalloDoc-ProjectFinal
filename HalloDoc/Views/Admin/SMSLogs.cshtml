@model List<HalloDoc.DataAccessLayer.DataModels.Smslog>


@{
    Layout = "_AdminHeader";
}

        <main>
            
            <div class="main-viewdocuments d-flex flex-column">
                <div class="view-documents d-flex flex-column  container">
                    <div class="d-flex flex-row justify-content-between m-3">
                        <h3>SMS Logs (Twilio)</h3>
                        <a class="btn back-btn mt-1" role="button" asp-controller="Admin" asp-action="adminDashboard"> < Back</a>
                    </div>
                    <form action="/Admin/SMSLogs" method="POST">
                        <div class="row d-flex justify-content-between">
                            <div class="col-md-3 gy-3">
                                <div class=" mb-3">
                                    <select name="role" id="requestType" class="form-select ">
                                        <option selected>Search by role</option>
                                        <option value="1">All</option>

                                    </select>

                                </div>
                            </div>
                            <div class="col-md-3 gy-3">
                                <div class="form-floating mb-3">
                                    <input name="recieverName" type="text" class="form-control first-name-create-patient shadow-none" id="floatingInput" placeholder="">
                                    <label class="first-name-create-patient-text" for="floatingInput">Reciever Name</label>

                                </div>
                            </div>
                            <div class="col-md-3 gy-3">
                                <div class="form-floating mb-3">
                                    <input name="mobile"  id="mobile" class="form-control email-create-patient shadow-none" >
                                    <label class="email-create-patient-text">Mobile Number</label>
                                </div>
                            </div>
                            <div class="col-md-3 gy-3">
                                <div class="form-floating mb-3">
                                    <input name="createdDate" type="date" class="form-control dob-create-patient shadow-none" id="toDate" placeholder="">
                                    <label class="dob-create-patient-text" for="floatingInput">Created Date</label>

                                </div>
                            </div>
                            <div class="col-md-3 gy-3">
                                <div class="form-floating mb-3">
                                    <input name="sentDate" type="date" class="form-control dob-create-patient shadow-none" id="toDate" placeholder="">
                                    <label class="dob-create-patient-text" for="floatingInput">Sent Date</label>

                                </div>
                            </div>

                        </div>
                        <div class="d-flex justify-content-end m-2">
                    <a role="button" href="@Url.Action("clearBtnSearch", "Admin", new { id = "clearBtnSMSLogs"})" class="btn back-btn me-2">Clear</a>
                            <button role="button" type="submit" class="btn submit-btn-create-patient">Search</button>
                        </div>

                    </form>

                    <div class="data-table-admin-viewuploads">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th scope="col">Recipient</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Role Name</th>
                                    <th scope="col">Mobile Number</th>
                                    <th scope="col">Created Date</th>
                                    <th scope="col">Sent Date</th>
                                    <th scope="col">Sent</th>
                                   
                                    <th scope="col">Confirmation Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>


                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestId)

                                            </td>
                                            <td>
                                              -

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleId)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MobileNumber)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreateDate)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SentDate)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsSmssent)

                                            </td>
                                           
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ConfirmationNumber)

                                            </td>

                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>












                </div>
            </div>
        </main>

