@model AspNetUser
@{
    ViewData["Title"] = "AdminLogin";

    Layout = null;
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

    <title>Admin Login Page</title>
</head>

<body>
    <div class="container-fluid min-vh-100 d-flex align-items-center admin-loginpage full-content">
        <div class="container bg-white">
            <div class="row">
                <div class="col-md-6">
                    <img class=" img-fluid doctor-img" src="/images/11116016_415.jpg" alt="">
                </div>
                <div class="col-md-6 main d-flex justify-content-center admin-login">

                    <div class="row row-cols-1 justify-content-center align-items-center width ">
                        <div class="col">
                            <img class="img-fluid  mx-auto" src="/images/logo_dark.png" alt="">
                            <button class="btn" onclick="darkMode()" style="border: none;"><i class="fa-regular fa-moon dark-icon p-1"></i></button>
                        </div>
                        
                        <div class="col">
                            <h3 class="login-msg">Login To Your Account</h3>
                        </div>
                         <form method="post" asp-controller="Admin" asp-action="Index">
                        <div class="col">
                            <div class="form-floating position-relative mb-3">

                                    <input asp-for="Email" type="email" class="form-control email shadow-none " id="floatingInput" placeholder="">
                                <label for="floatingInput" class=" email-text">Email address </label>
                                <i class="fa-regular fa-user position-absolute user-icon" style="color: #828487;"></i>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col">
                                <div class="form-floating position-relative  mb-3">
                                    <input asp-for="PasswordHash" type="password" class="form-control password shadow-none" id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword" class=" password-text">Password</label>
                                <i class="fa-regular fa-eye  position-absolute eye-icon" style="color: #828487;"></i>
                                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col gy-2">
                                <button class="btn login-btn w-100" type="submit">Log In</button>
                        </div>
                        <div class="col">
                            <a href="/forgot-password.html" class="forgot-link d-flex justify-content-center">Forgot Password?</a>
                        </div>
                        </form>
                        <ul class="nav justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link terms-link  p-1" aria-current="page" href="#">Terms of Conditions</a>
                            </li>
                            <li class="nav-item">
                                <div class="vr" style="height: 35px;"></div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link privacy-link p-1" href="#">Privacy Policy</a>
                            </li>
                        </ul>

                    </div>



                </div>
            </div>
        </div>
    </div>
    <script src="/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

</body>

</html>