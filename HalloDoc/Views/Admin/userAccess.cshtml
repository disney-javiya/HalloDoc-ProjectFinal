@model HalloDoc.DataAccessLayer.DataModels.ViewModels.dashboardTableModel


@{
    Layout = "_AdminHeader";
}
<script>
    var accounttype;
  
    $(document).ready(function () {
        fetchUserAccessData();
    });



</script>
<script>
    function fetchUserAccessData() {


        accounttype = $('#accounttype').val();
      
        $.ajax({
            url: "/Admin/userAccessTable",

            data: { 'accounttype': accounttype, 'pagenumber': 1 },

            success: function (data) {
                $('#useraccess-table').html(data);
            },
            error: function () {

            }
        });
    }
</script>

<main>

    <div class="main-viewdocuments d-flex flex-column">
        <div class="view-documents d-flex flex-column  container">
            <div class="d-flex flex-row">
                <h3>User Access</h3>

            </div>
          
                <div class="row d-flex justify-content-between">
                    <div class="col-md-3 gy-3">

                    <select name="accounttype" id="accounttype" class="form-select mb-3 region" aria-label="Default select example">
                            <option selected>Select Account Type</option>
                            <option value="admin">Admin</option>
                            <option value="physician">Physician</option>
                        </select>
                    </div>


                </div>
                <div class="d-flex justify-content-end m-2">
                <a role="button" href="@Url.Action("clearBtnSearch", "Admin", new { id = "clearBtnUserAccess"})" class="btn back-btn me-2">Clear</a>
                    <button role="button" type="submit" onclick="fetchUserAccessData()" class="btn submit-btn-create-patient">Search</button>
                </div>

        



            <div id="useraccess-table">

          </div>









        </div>
    </div>
</main>



<!--For Delete-->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteConfirmationForm" asp-controller="Admin" asp-action="adminDeletePartner" method="POST">

                <!-- Modal Header -->
                <div class="modal-header" style="background:#01bce9; color:white;">
                    <h4 class="modal-title">Delete Confirmation</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body" style="color:grey;">


                    <input type="hidden" id="roleinput1" name="VendorId" />
                    <b> Are you sure you want to delete this Vendor from list?</b>

                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn submit-btn-cancelcase">Confirm</button>
                    <button type="button" class="btn cancel-btn-cancelcase" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>




