    </script>
    <script>
        $(document).ready(function () {
          
            $.ajax({
                url: '/Admin/getAdminRegions',
                method: 'GET',
                success: function (data) {
                   
                        $.each(data, function (index, region) {

                        var checkbox = $('<input checked disabled>').attr({
                                type: 'checkbox',
                                name: 'regions',
                                class: 'box',
                                value: region.regionId
                            });
                           
                            var label = $('<label>').text(region.name);
                           
                            var container = $('#checkbox-container');
                        container.append(checkbox).append(" ").append(label).append('<br>');
                        });
                 
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching regions:", xhr.status, xhr.statusText);
                    console.error("Response body:", xhr.responseText);
                    alert("Failed to fetch regions. Please try again later.");
                }

            });
        });
    </script>

    <script>
        const editBtn1 = document.querySelector("#edit1");
      
        const saveBtn1 = document.querySelector("#submit1");
      
        const cancelBtn1 = document.querySelector("#cancel1");
       
        const e1 = document.querySelectorAll(".e1");
        const check = document.querySelector("#checkbox-container");
        const checks = check.getElementsByTagName('input');
        editBtn1.addEventListener("click", function () {
            e1.forEach(field => {
                field.removeAttribute("disabled");  
               
            });
        
            for (let i = 0; i < checks.length; i++) {
                checks[i].removeAttribute("disabled");
                
            }
           
            editBtn1.style.display = "none";
            saveBtn1.style.display = "inline-block";
            cancelBtn1.style.display = "inline-block";
        });

        cancelBtn1.addEventListener("click", function () {
            e1.forEach(field => {
                field.setAttribute("disabled", true);
            });
        for (let i = 0; i < checks.length; i++) {
            checks[i].setAttribute("disabled", true);

        }
            editBtn1.style.display = "inline-block";
            saveBtn1.style.display = "none";
            cancelBtn1.style.display = "none";
        });

</script>
