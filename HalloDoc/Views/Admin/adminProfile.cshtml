    <script>
        $(document).ready(function () {

            $.ajax({
                url: '/Admin/GetAdminsRoles',
                type: 'GET',

                success: function (data) {

                    var roleDropdown = $('#role');
                    roleDropdown.empty();
                    roleDropdown.append($('<option></option>').text("Role"));
