        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="providerLocation">Provider Location</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="adminProfile">My Profile</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Providers
            </a>
                
           
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="providerMenu">Provider</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="ProviderSchedulingDayWise">Scheduling</a></li>
                <li><a class="dropdown-item" href="#">Invoicing</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="partnersPage">Partners</a>
        </li>
       
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Access
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="adminAccess">Role Access</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="userAccess">User Access</a></li>
